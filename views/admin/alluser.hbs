            </tr>
           
        
       
<div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Confirmation meassage</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      {{#if this.isBlocked}}
      <div class="modal-body">
        Are you sure to unblock {{this.username}} ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
     <a href="/admin/unblockuser/{{this._id}}"><button id="btnunblock" type="button"  class="btn btn-success">Unblock</button></a>

      {{else}}

      <div class="modal-body">
        Are you sure to block {{this.username}} ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
      <a href="/admin/blockuser/{{this._id}}"><button id="btnblock" type="button"  class="btn btn-danger mr-3">Block</button></a>

      </div>
    </div>
  </div>
</div>
{{/if}}
   </tbody>
          {{/each}}
        </table>
      </div>
    </div>

  </div>
</div>
