<body >
    <div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row ">
			<div class="col-lg-8 offset-lg-2   text-center">
					<div class="breadcrumb-text ">
						
						<h1>Products</h1>
					</div>
				</div>
			</div>
		</div>
	</div>

<div class="container-fluid mb-5">
  <div class="row">
    <div class=" col-md-12">
      <div class="text-center mt-5 mb-5">
           <a href="/admin/addproduct"><button class="btn btn-success">Add new product</button></a>
          </div>
      <div class="cart-table-wrap">
        <table class="cart-table table-responsive">
          <thead class="cart-table-head ">
            <tr class="table-head-row text-dark">
              <th class="product-name">No.</th>
              <th class="product-name">Name</th>
              <th class="product-name">Description</th>
              <th class="product-name">Category</th>
<th class="product-price">Price</th>
<th class="product-name">Stock</th>
<th class="product-image">Image</th>
              <th class="product-quantity">Options</th>
            
            </tr>
          </thead>
          {{#each products}}
          <tbody>
            <tr class="table-body-row ">
              <td class="product-remove indexa"></td>
              <td class="product-remove ">{{this.name}}</td>
              <td class="product-name ">{{this.description}}</td>
<td class="product-price">{{this.category}}</td>
                 <td class="product-remove ">{{this.price}}</td>
              <td class="product-remove ">{{this.stock}}</td>
              <td class="product-name">
                <img  style="width:50px;height:50px;" src='/product-images/{{this._id}}.jpg' alt=""> </td>
            <td class=" product name " >
                <a  href="/admin/editproduct/{{this._id}}"><button class="btn btn-primary my-2 ml-2">Edit</button></a>
  <a class="mx-3"><button class="btn btn-danger" data-toggle="modal" data-target="#exampleModal{{this._id}}">Delete</button></a>
           
            </td>
            </tr>
            <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Confirmation meassage</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">
        Are you sure to delete {{this.name}} ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
      <a href="/admin/deleteproduct/{{this._id}}"><button class="btn btn-danger">Delete</button></a>
               
           
        
          </tbody>
          {{/each}}
        </table>
      </div>
    </div>

  </div>
</div>
</body>
